                  </tr>
              <% })%>
              <%usersWeek.forEach(element => {%>
                <tr>
                  <td style="width:50%;"><%=element.userName%></th>
                  <td style="width:25%;"><%=element.clicks%></th>
                  <td style="width:25%;">Week</th>
