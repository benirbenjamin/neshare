           link.forEach(element => {%>
            <li><%=element.link%>   <b>clicks</b> 0 <b>Date</b>    <%=element.Date%>
            <p><%=element.Discription%></p> 
            <form action="/DeleteTheLink" id="<%=element.id%>" method="post">
